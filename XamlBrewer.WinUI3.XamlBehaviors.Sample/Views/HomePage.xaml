<Page x:Class="XamlBrewer.WinUI3.XamlBehaviors.Sample.Views.HomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:interactivity="using:Microsoft.Xaml.Interactivity"
      xmlns:behaviors="using:CommunityToolkit.WinUI.UI.Behaviors"
      xmlns:sample="using:Microsoft.Toolkit.Uwp.SampleApp.Common"
      xmlns:brewhaviors="using:XamlBrewer.WinUI3.Behaviors"
      mc:Ignorable="d"
      Background="Transparent">

    <GridView x:Name="GridView"
              SelectionMode="None"
              VerticalAlignment="Stretch"
              Margin="0">
        <GridView.ItemsPanel>
            <ItemsPanelTemplate>
                <VariableSizedWrapGrid ItemHeight="360"
                                       ItemWidth="420"
                                       Orientation="Horizontal" />
            </ItemsPanelTemplate>
        </GridView.ItemsPanel>

        <!-- AutoFocus and AutoSelect -->
        <GridViewItem CornerRadius="4"
                      Padding="0"
                      Margin="0 0 20 20">
            <GridViewItem.Transitions>
                <TransitionCollection>
                    <RepositionThemeTransition />
                </TransitionCollection>
            </GridViewItem.Transitions>
            <Grid Width="400"
                  Height="340"
                  Margin="0"
                  CornerRadius="4"
                  RowDefinitions="auto, *">
                <Border Margin="0"
                        Background="Transparent"
                        BorderThickness="2"
                        BorderBrush="Silver"
                        Opacity=".1"
                        Grid.RowSpan="10" />
                <Border Margin="0"
                        BorderThickness="0"
                        Background="{ThemeResource SystemAccentColor}"
                        Opacity=".1" />

                <TextBlock Text="Focus and Select"
                           Padding="0"
                           FontWeight="SemiBold"
                           HorizontalAlignment="Stretch"
                           FontSize="16"
                           Margin="10" />

                <StackPanel HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Grid.Row="1">
                    <TextBox Text="My content is not selected when loaded"
                             Width="300"
                             Margin="8" />
                    <TextBox x:Name="dinges"
                             Text="My content is selected when loaded"
                             Width="300">
                        <interactivity:Interaction.Behaviors>
                            <behaviors:AutoFocusBehavior />
                            <behaviors:AutoSelectBehavior />
                        </interactivity:Interaction.Behaviors>
                    </TextBox>
                </StackPanel>
            </Grid>
        </GridViewItem>

        <!-- Viewport -->
        <GridViewItem CornerRadius="4"
                      Padding="0"
                      Margin="0 0 20 20">
            <GridViewItem.Transitions>
                <TransitionCollection>
                    <RepositionThemeTransition />
                </TransitionCollection>
            </GridViewItem.Transitions>
            <Grid Width="400"
                  Height="340"
                  Margin="0"
                  CornerRadius="4"
                  RowDefinitions="auto, *">
                <Border Margin="0"
                        Background="Transparent"
                        BorderThickness="2"
                        BorderBrush="Silver"
                        Opacity=".1"
                        Grid.RowSpan="10" />
                <Border Margin="0"
                        BorderThickness="0"
                        Background="{ThemeResource SystemAccentColor}"
                        Opacity=".1" />

                <TextBlock Text="Viewport"
                           FontWeight="SemiBold"
                           Padding="0"
                           HorizontalAlignment="Stretch"
                           FontSize="16"
                           Margin="10" />

                <ScrollViewer Grid.Row="1">
                    <Grid Height="3000">
                        <Border Width="100"
                                Height="100"
                                Background="{ThemeResource SystemAccentColor}">
                            <interactivity:Interaction.Behaviors>
                                <behaviors:ViewportBehavior x:Name="ViewportBehavior"
                                                            IsAlwaysOn="True"
                                                            EnteringViewport="Element_EnteringViewport"
                                                            EnteredViewport="Element_EnteredViewport"
                                                            ExitingViewport="Element_ExitingViewport"
                                                            ExitedViewport="Element_ExitedViewport" />
                            </interactivity:Interaction.Behaviors>
                            <FontIcon Glyph="&#xE899;"
                                      FontSize="40" />
                        </Border>
                    </Grid>
                </ScrollViewer>
                <TextBlock x:Name="Status"
                           Text="(Scroll down)"
                           Grid.Row="1"
                           Margin="4"
                           VerticalAlignment="Bottom"
                           HorizontalAlignment="Center" />
            </Grid>
        </GridViewItem>

        <!-- Something Header -->
        <GridViewItem CornerRadius="4"
                      Padding="0"
                      Margin="0 0 20 20">
            <GridViewItem.Transitions>
                <TransitionCollection>
                    <RepositionThemeTransition />
                </TransitionCollection>
            </GridViewItem.Transitions>
            <Grid Width="400"
                  Height="340"
                  Margin="0"
                  CornerRadius="4"
                  RowDefinitions="auto, *">
                <Border Margin="0"
                        Background="Transparent"
                        BorderThickness="2"
                        BorderBrush="Silver"
                        Opacity=".1"
                        Grid.RowSpan="10" />
                <Border Margin="0"
                        BorderThickness="0"
                        Background="{ThemeResource SystemAccentColor}"
                        Opacity=".1" />

                <TextBlock Text="Fade Header"
                           FontWeight="SemiBold"
                           Padding="0"
                           HorizontalAlignment="Stretch"
                           FontSize="16"
                           Margin="10" />

                <Grid Grid.Row="1">
                    <ListView>
                        <interactivity:Interaction.Behaviors>
                            <behaviors:FadeHeaderBehavior />
                            <!--<behaviors:StickyHeaderBehavior />-->
                        </interactivity:Interaction.Behaviors>
                        <ListView.Header>
                            <Grid x:Name="MyHeaderGrid"
                                  MinHeight="50"
                                  Background="{ThemeResource SystemAccentColor}">
                                <StackPanel VerticalAlignment="Center"
                                            HorizontalAlignment="Center">
                                    <TextBlock Text="Header"
                                               TextAlignment="Center"
                                               FontWeight="Bold"
                                               FontSize="48"
                                               Foreground="White"
                                               Margin="6" />
                                    <TextBlock Text="Opacity fades from 100% to 0% as you scroll up."
                                               Foreground="White"
                                               VerticalAlignment="Center"
                                               TextAlignment="Center"
                                               Margin="6" />
                                </StackPanel>
                            </Grid>
                        </ListView.Header>
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <Border MinHeight="100">
                                    <Border.Background>
                                        <SolidColorBrush Color="Silver"
                                                         Opacity=".1" />
                                    </Border.Background>
                                    <TextBlock Text="{Binding}"
                                               VerticalAlignment="Center"
                                               Margin="12" />
                                </Border>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                        <ListView.ItemContainerStyle>
                            <Style TargetType="ListViewItem">
                                <Setter Property="HorizontalContentAlignment"
                                        Value="Stretch" />
                                <Setter Property="Padding"
                                        Value="4" />
                            </Style>
                        </ListView.ItemContainerStyle>
                        <ListView.Items>
                            <x:String>Item 1</x:String>
                            <x:String>Item 2</x:String>
                            <x:String>Item 3</x:String>
                            <x:String>Item 4</x:String>
                            <x:String>Item 5</x:String>
                        </ListView.Items>
                    </ListView>
                </Grid>
            </Grid>
        </GridViewItem>

        <!-- Hyperlink -->
        <GridViewItem CornerRadius="4"
                      Padding="0"
                      Margin="0 0 20 20">
            <GridViewItem.Transitions>
                <TransitionCollection>
                    <RepositionThemeTransition />
                </TransitionCollection>
            </GridViewItem.Transitions>
            <Grid Width="400"
                  Height="340"
                  Margin="0"
                  CornerRadius="4"
                  RowDefinitions="auto, *">
                <Border Margin="0"
                        Background="Transparent"
                        BorderThickness="2"
                        BorderBrush="Silver"
                        Opacity=".1"
                        Grid.RowSpan="10" />
                <Border Margin="0"
                        BorderThickness="0"
                        Background="{ThemeResource SystemAccentColor}"
                        Opacity=".1" />

                <TextBlock Text="Hyperlink"
                           FontWeight="SemiBold"
                           Padding="0"
                           HorizontalAlignment="Stretch"
                           FontSize="16"
                           Margin="10" />

                <StackPanel HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Grid.Row="1">
                    <TextBlock x:Name="url"
                               TextWrapping="WrapWholeWords"
                               FontSize="16"
                               Margin="10">
                        <interactivity:Interaction.Behaviors>
                            <sample:TextBlockHyperlinkBehavior />
                        </interactivity:Interaction.Behaviors>
                    </TextBlock>
                </StackPanel>
            </Grid>
        </GridViewItem>

        <!-- User Stopped Typing -->
        <GridViewItem CornerRadius="4"
                      Padding="0"
                      Margin="0 0 20 20">
            <GridViewItem.Transitions>
                <TransitionCollection>
                    <RepositionThemeTransition />
                </TransitionCollection>
            </GridViewItem.Transitions>
            <Grid Width="400"
                  Height="340"
                  Margin="0"
                  CornerRadius="4"
                  RowDefinitions="auto, *">
                <Border Margin="0"
                        Background="Transparent"
                        BorderThickness="2"
                        BorderBrush="Silver"
                        Opacity=".1"
                        Grid.RowSpan="10" />
                <Border Margin="0"
                        BorderThickness="0"
                        Background="{ThemeResource SystemAccentColor}"
                        Opacity=".1" />

                <TextBlock Text="User Stopped Typing"
                           FontWeight="SemiBold"
                           Padding="0"
                           HorizontalAlignment="Stretch"
                           FontSize="16"
                           Margin="10" />

                <StackPanel HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Grid.Row="1">
                    <AutoSuggestBox x:Name="ManualSuggestBox"
                                    Header="Manual"
                                    PlaceholderText="Search"
                                    QueryIcon="Find"
                                    Width="300"
                                    TextChanged="AutoSuggestBox_TextChanged"
                                    QuerySubmitted="AutoSuggestBox_QuerySubmitted"
                                    Margin="0 0 0 24" />
                    <AutoSuggestBox Header="For real"
                                    PlaceholderText="Search"
                                    QueryIcon="Find"
                                    Width="300"
                                    QuerySubmitted="AutoSuggestBox_QuerySubmitted">
                        <interactivity:Interaction.Behaviors>
                            <brewhaviors:UserStoppedTypingBehavior UserStoppedTyping="AutoSuggestBox_UserStoppedTyping"
                                                                   DelayInMilliseconds="1500"
                                                                   MinimumCharacters="2" />
                        </interactivity:Interaction.Behaviors>
                    </AutoSuggestBox>
                </StackPanel>

                <InfoBadge Background="{ThemeResource SystemAccentColorComplementary}"
                           HorizontalAlignment="Right"
                           VerticalAlignment="Top"
                           Height="16"
                           Width="16"
                           Margin="6">
                    <!-- No show (neither does SymbolIcon) -->
                    <!--<InfoBadge.IconSource>
                        <FontIconSource Glyph="&#xE734;" />
                    </InfoBadge.IconSource>-->
                </InfoBadge>
            </Grid>
        </GridViewItem>

    </GridView>

</Page>
